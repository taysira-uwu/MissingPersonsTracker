//*********
// Class 3: UnidentifiedBody which Inherits from Person
// ***********

class UnidentifiedBody extends Person {
    // Specific fields for this class
    private String hospitalName;
    private int minAge;
    private int maxAge;

    // Constructor 1: No-Args
    public UnidentifiedBody() { super(); }

    // Constructor with alll fields
    public UnidentifiedBody(String id, String description, String location, String gender, 
                            String hospitalName, int minAge, int maxAge) {
              // I called the parent
        super(id, description, location, gender);
        this.hospitalName = hospitalName;
        this.minAge = minAge;
        this.maxAge = maxAge;
    }

    // getters & setters
    public String getHospitalName() { return hospitalName; }
    public void setHospitalName(String hospitalName) { this.hospitalName = hospitalName; }

    public int getMinAge() { return minAge; }
    public void setMinAge(int minAge) { this.minAge = minAge; }

    public int getMaxAge() { return maxAge; }
    public void setMaxAge(int maxAge) { this.maxAge = maxAge; }

    @Override
    public String getDetails() {
        return "Type: UNIDENTIFIED BODY | Hospital: " + hospitalName;
    }

    @Override
    public String toString() {
        return super.toString() + "\n   Hospital: " + hospitalName + " | Approx Age: " + minAge + "-" + maxAge;
    }
}
